= form.input :name, :input_html => {:class => "input-xxlarge"}
= form.input :delivery_method, :as => :select, :collection => [:smtp,:sendmail, :file ], :include_blank => false
%legend
  Settings
= form.input :address, :input_html => {:class => "input-xlarge"}
= form.input :port, :input_html => {:class => "input-xlarge"}
= form.input :domain, :input_html => {:class => "input-xlarge"}
= form.input :user_name, :input_html => {:class => "input-xlarge"}
= form.input :password, :input_html => {:class => "input-xlarge"}, :as => :string
= form.input :authentication, :as => :select, :collection => [:plain, :login, :cram_md5]
= form.input :enable_starttls_auto, :as => :select, :collection => [true, false]
